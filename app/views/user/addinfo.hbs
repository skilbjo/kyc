{{> head}}

<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span>Thanks for registering!</h1>
		<h2><span class="fa fa-anchor"></span>Before finalizing the registration process though, we'll just need a few more pieces of information...</h2>
	</div>

	<div class="row">

		<!-- Editable Information -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-danger"><span class="fa fa-user"></span> Edit Information for User# {{ user._id }}</h3>

				<form method="POST" action="/users">
					<input type="hidden" name="_method" value="put">
				  First name:		<input type="text" name="firstname" value="{{ user.firstName }}"><br>
				  Last name: 		<input type="text" name="lastname"	value="{{ user.lastName }}"><br>
				  Mobile number: 	<input type="text" name="mobile"	value="{{ user.mobileNo }}"><br>
				  Street address: <input type="text" name="street" 	value="{{ user.streetAddress}}"><br>
				  City: 			<input type="text" name="city"				value="{{ user.cityAddress }}"><br>
				  State: 			<input type="text" name="state"       value="{{ user.stateAddress }}"><br>
				  <input type="submit" value="Submit">
				</form>

			</div>
		</div>
	</div>
</div>

{{> footer}}
