<!-- app/views/edit.hbs -->

<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span>Thanks for registering!</h1>
		<h2><span class="fa fa-anchor"></span>Before finalizing the registration process though, we'll just need a few more pieces of information...</h2>
	</div>

	<div class="row">

		<!-- Editable Information -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-danger"><span class="fa fa-user"></span> Edit Information for User# {{ user}}</h3>

				<form method="POST" action="/users/{{ user }}">
					<input type="hidden" name="_method" value="put">
				  First name:		<input type="text" name="firstname"><br>
				  Last name: 		<input type="text" name="lastname"><br>
				  Mobile number: 	<input type="text" name="mobile"><br>
				  Street address: 	<input type="text" name="street"><br>
				  City: 			<input type="text" name="city"><br>
				  State: 			<input type="text" name="state"><br>
				  <input type="submit" value="Submit">
				</form>

			</div>
		</div>
	</div>
</div>
</body>
</html>
